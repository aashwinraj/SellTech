<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"

        android:layout_height="match_parent">


        <androidx.appcompat.widget.Toolbar

            android:id="@+id/toolbar_addProduct"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/side_nav_bar">

            <TextView


                android:id="@+id/textview_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="116dp"
                android:fontFamily="sans-serif-black"
                android:text="ADD PRODUCT"
                android:textColor="@color/black"
                android:textSize="24sp">

            </TextView>


        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/imageView_addProduct"
            android:layout_width="match_parent"
            android:layout_height="268dp"
            android:scaleType="centerCrop"
            android:layout_below="@id/toolbar_addProduct" />


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/chooseProductImage"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="221dp"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_baseline_add_a_photo_24" />

        <EditText
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:id="@+id/et_addProductType"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/imageView_addProduct"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:hint="Item Type" />

        <EditText
            android:id="@+id/et_addProductBrand"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_below="@id/et_addProductType"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:hint="Brand Name" />


        <EditText
            android:id="@+id/et_addProductPrice"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_below="@id/et_addProductBrand"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:hint="Price" />

        <EditText
            android:id="@+id/et_addProductUsedTime"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_below="@id/et_addProductPrice"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:hint="Used For" />

        <EditText
            android:id="@+id/et_addProductDesCription"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_below="@id/et_addProductUsedTime"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:hint="Description" />

        <com.example.selltech.util.MSPButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/submit_product_button"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="6dp"
            android:layout_below="@id/et_addProductDesCription"
            android:background="@drawable/button_background"
            android:text="SUBMIT"
            android:textSize="28dp"/>



    </RelativeLayout>




</ScrollView>
