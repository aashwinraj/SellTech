    <TextView
        android:id="@+id/et_box_name"

        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/cardView_pic"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/nameTa"

        android:layout_alignTop="@id/nameTa"
        android:textColor="@color/black"

        android:textSize="20dp" />


    <TextView
        android:id="@+id/et_box_email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/et_box_name"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/EmailTag"
        android:layout_alignTop="@id/EmailTag"
android:textColor="@color/black"

        android:textSize="20dp" />


    <TextView
        android:id="@+id/et_box_phone"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/et_box_email"
android:inputType="number"
        android:textColor="@color/black"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/PhoneTag"
        android:layout_alignTop="@id/PhoneTag"
        android:textSize="20dp" />


