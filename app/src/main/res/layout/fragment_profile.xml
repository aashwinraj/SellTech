<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">




    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_marginLeft="64dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="1000dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/side_nav_bar" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/userProfileImage"
            android:src="@drawable/user_profile_clipart" />


    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Name :"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/cardView_pic"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:id="@+id/nameTa"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Email :"
        android:layout_marginLeft="8dp"

        android:layout_below="@id/nameTa"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:id="@+id/EmailTag"/>
    <TextView
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:text="Phone :"
    android:layout_below="@id/EmailTag"
    android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"

        android:fontFamily="sans-serif-medium"
    android:textSize="18dp"
    android:textColor="@color/black"
    android:id="@+id/PhoneTag"/>

